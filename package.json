{
  "name": "spotify-now",
  "private": true,
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": "./dist/esbuild/browser.js",
  "bin": {
    "spotify-now": "./dist/esbuild/cli.js"
  },
  "scripts": {
    "start": "ts-node src/arduino.ts",
    "cli": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "dev": "ts-node src/main.ts",
    "watch": "nodemon -e ts -w ./src -x yarn ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-node",
    "esbuild-node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:dev": "esbuild src/cli.ts --bundle --platform=node --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:watch": "esbuild src/cli.ts --bundle --platform=node --watch --sourcemap=external --outfile=dist/esbuild/cli.js"
  },
  "devDependencies": {
    "@types/color-thief-node": "^1.0.1",
    "@types/jest": "^26.0.21",
    "@types/johnny-five": "^1.3.2",
    "@types/node": "^15.0.1",
    "@types/spotify-web-api-node": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.15",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@serialport/bindings": "^9.2.7",
    "chalk": "^4.1.2",
    "color-thief-node": "^1.0.4",
    "johnny-five": "^2.1.0",
    "spotify-web-api-node": "^5.0.2",
    "yargs": "^17.2.1"
  }
}
